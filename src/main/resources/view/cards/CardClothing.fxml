<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ee.ivkhkdev.Clothing_StoreJavaFX.controller.card.CardClothingController"
      alignment="CENTER" spacing="8"
      styleClass="clothing-card-root"
      prefWidth="200.0" prefHeight="250.0">

    <stylesheets>
        <URL value="@../css/cardClothing.css"/>
    </stylesheets>

    <!-- Картинка товара -->
    <ImageView fx:id="imgClothing" fitWidth="180.0" preserveRatio="true"/>

    <!-- Название товара -->
    <Label fx:id="lblName" styleClass="clothing-card-name"/>

    <!-- Дополнительная информация -->
    <Label fx:id="lblBrand" styleClass="clothing-card-info"/>
    <Label fx:id="lblSize" styleClass="clothing-card-info"/>
    <Label fx:id="lblPrice" styleClass="clothing-card-info"/>
    <Label fx:id="lblInStock" styleClass="clothing-card-info"/>

    <!-- Кнопка "Купить" -->
    <Button fx:id="btnBuy" text="Купить" onAction="#buyClothing" styleClass="clothing-card-button"/>
</VBox>
