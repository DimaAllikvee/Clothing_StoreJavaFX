<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ee.ivkhkdev.Clothing_StoreJavaFX.controller.chat.ChatController"
            prefWidth="600" prefHeight="400"
            styleClass="chat-root">

    <!-- Подключаем CSS -->
    <stylesheets>
        <URL value="@../css/chat.css"/>
    </stylesheets>

    <!-- Верхняя панель с кнопкой «Назад» и заголовком -->
    <top>
        <HBox styleClass="chat-header">
            <Button text="← Назад"
                    onAction="#onBack"
                    styleClass="chat-back-button"/>
            <Label text="Чат с магазином" styleClass="chat-title"/>
        </HBox>
    </top>

    <!-- Основная область: логи -->
    <center>
        <TextArea fx:id="taMessages"
                  editable="false"
                  wrapText="true"
                  styleClass="chat-messages"/>
    </center>

    <!-- Нижняя панель ввода -->
    <bottom>
        <HBox spacing="8" styleClass="chat-input-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="tfInput"
                       HBox.hgrow="ALWAYS"
                       promptText="Введите сообщение..."
                       onAction="#onSend"
                       styleClass="chat-input"/>
            <Button text="Отправить"
                    onAction="#onSend"
                    styleClass="chat-send-button"/>
        </HBox>
    </bottom>
</BorderPane>
