<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox fx:id="vbMainFormRoot" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ee.ivkhkdev.Clothing_StoreJavaFX.controller.MainFormController"
      alignment="CENTER" spacing="10"
      styleClass="main-root">


    <stylesheets>
        <URL value="@../css/main.css"/>
    </stylesheets>

    <children>
        <!-- Таблица со списком одежды -->
        <TableView fx:id="tvClothingList" prefHeight="400.0" prefWidth="600.0" styleClass="main-table">
            <columns>
                <TableColumn fx:id="tcId"          prefWidth="40.0"  text="ID" />
                <TableColumn fx:id="tcName"        prefWidth="140.0" text="Название" />
                <TableColumn fx:id="tcCategory"    prefWidth="100.0" text="Категория" />
                <TableColumn fx:id="tcSize"        prefWidth="60.0"  text="Размер" />
                <TableColumn fx:id="tcQuantity"    prefWidth="80.0"  text="Всего" />
                <TableColumn fx:id="tcInStock"     prefWidth="80.0"  text="В наличии" />
            </columns>
        </TableView>

        <!-- Блок с кнопкой "Редактировать модель" -->
        <HBox fx:id="hbEditClothing" alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="600.0"
              styleClass="main-edit-box" visible="false">
            <children>
                <Button mnemonicParsing="false" onAction="#showEditClothingForm" text="Редактировать модель" styleClass="main-edit-button"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding>
        </HBox>
    </children>
</VBox>
